<div class="edit-block ">	<form>		<input name="headline" type="text" placeholder="_('Add Headline')">		<select class="pull-right" name="type">			<option>_('Type of posts')</option>			{#PostTypes}				<option value="{Key}">{Key}</option>			{/PostTypes}		</select>		<textarea name="body-text"></textarea>		<button ci="savepost" class="btn btn-primary pull-right" type="submit">_('Save &amp; post')</button>		<button ci="save" class="btn pull-right" type="submit">_('Save')</button>	</form></div><!--<ul id="own-posts-holder" class="search-result-list scroller">	<div id="own-posts-results"></div>	<div id="own-posts-more"></div></ul>--->