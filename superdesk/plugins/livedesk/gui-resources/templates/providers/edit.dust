<div class="edit-block ">	<form>		<input name="headline" type="text" placeholder="_('Add Headline')">		<select class="pull-right" name="type">			<option>_('Type of posts')</option>			{#options}				<option value="{value}">{name}</option>			{/options}			<option value="quotes">Quotes</option>			<option value="alert">Alert</option>			<option value="wrapup">Wrapup</option>			<option value="journalist_comment">Journalist Comment</option>			<option value="readers_comment">Readers Comment</option>		</select>		<textarea name="body-text"></textarea>		<button ci="savepost" class="btn btn-primary pull-right" type="submit">_('Save &amp; post')</button>		<button ci="save" class="btn pull-right" type="submit">_('Save')</button>	</form></div><button id="start" type="button">Start</button><button id="stop" type="button">Stop</button><!--<ul id="own-posts-holder" class="search-result-list scroller">	<div id="own-posts-results"></div>	<div id="own-posts-more"></div></ul>-->